{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
        "name":"client",
        "image": "kapalal11/multi-client",
        "hostname": "client",
        "essential": false
    },

    {
        "name":"server",
        "image":"kapalal11/multi-server",
        "hostname":"api",
        "essential":false
    },

    {
        "name":"worker",
        "image":"kapalal11/multi-worker",
        "hostname":"worker",
        "essential":false

    },

    {
        "name": "nginx",
        "image": "kapalal11/multi-nginx",
        "hostname": "nginx",
        "essential": true,
        "portMappings": [
            {
                "hostPort": 80,
                "containerPort": 80

            }
        ],
        "links": ["client","server"]

    }
]  

}
